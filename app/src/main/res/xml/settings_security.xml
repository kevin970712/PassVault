<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Security">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="require_auth_export"
            app:summary="Verify PIN/biometric before exporting data"
            app:title="Require Authentication for Export" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="encrypt_backups"
            app:summary="Protect backup files with additional encryption"
            app:title="Encrypt Backups" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="block_screenshots"
            app:summary="Prevent screenshots and screen recording for enhanced security"
            app:title="Block Screenshots" />

        <ListPreference
            app:defaultValue="60000"
            app:entries="@array/auto_lock_timeout_entries"
            app:entryValues="@array/auto_lock_timeout_values"
            app:iconSpaceReserved="false"
            app:key="auto_lock_timeout"
            app:title="Auto-lock Timeout"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="Lockout Settings">

        <ListPreference
            app:defaultValue="5"
            app:entries="@array/max_failed_attempts_entries"
            app:entryValues="@array/max_failed_attempts_values"
            app:iconSpaceReserved="false"
            app:key="max_failed_attempts"
            app:title="Max Failed Attempts"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="30000"
            app:entries="@array/lockout_duration_entries"
            app:entryValues="@array/lockout_duration_values"
            app:iconSpaceReserved="false"
            app:key="lockout_duration"
            app:title="Lockout Duration"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>
