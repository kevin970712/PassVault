<resources>

    <style name="Base.Theme.PassVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - Subtle arctic accent -->
        <item name="colorPrimary">@color/polar_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/frozen_mist</item>
        <item name="colorOnPrimaryContainer">@color/polar_night</item>

        <item name="colorSecondary">@color/nordic_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/arctic_sky</item>
        <item name="colorOnSecondaryContainer">@color/deep_fjord</item>

        <item name="colorTertiary">@color/northern_lights</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/aurora_teal</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <!-- Surface colors - Clean white/light surfaces -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceContainer">@color/grey_50</item>
        <item name="colorSurfaceContainerLow">@color/white</item>
        <item name="colorSurfaceContainerHigh">@color/grey_100</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/grey_600</item>

        <!-- Background color - Pure white -->
        <item name="android:colorBackground">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/worksans_variable</item>
        <item name="android:fontFamily">@font/worksans_variable</item>
    </style>

    <style name="Theme.PassVault" parent="Base.Theme.PassVault" />

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>