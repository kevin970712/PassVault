<resources>

    <style name="Base.Theme.PassVault" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors - Arctic Blue accent -->
        <item name="colorPrimary">@color/ice_flow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/deep_fjord</item>
        <item name="colorOnPrimaryContainer">@color/arctic_ice</item>

        <!-- Secondary colors - Nordic Blue -->
        <item name="colorSecondary">@color/nordic_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/polar_night</item>
        <item name="colorOnSecondaryContainer">@color/frozen_mist</item>

        <item name="colorTertiary">@color/northern_lights</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- Surface colors - Dark with subtle blue tint -->
        <item name="colorSurface">@color/surface_dark_blue</item>
        <item name="colorSurfaceContainer">@color/surface_dark_blue_elevated</item>
        <item name="colorSurfaceContainerLow">@color/black</item>
        <item name="colorSurfaceContainerHigh">@color/surface_dark_blue_high</item>
        <item name="colorOnSurface">@color/arctic_ice</item>
        <item name="colorOnSurfaceVariant">@color/arctic_sky</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/surface_dark_blue</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Fonts -->
        <item name="fontFamily">@font/worksans_variable</item>
        <item name="android:fontFamily">@font/worksans_variable</item>
    </style>
</resources>